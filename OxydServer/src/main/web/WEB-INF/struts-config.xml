<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

    <action-mappings>
    <!-- For openning a document or a block -->
        <action path="/listworkspaces/"
                type="org.codehaus.oxyd.server.ActionManager"
                name="listworkspaces"
                scope="request">
        </action>

        <!-- For saving a block or a document -->
        <action path="/listworkspacedocuments/"
                type="org.codehaus.oxyd.server.ActionManager"
                name="listworkspacedocuments"
                scope="request">
        </action>

    <!-- For closing a document or a block -->
        <action path="/getDocument/"
                type="org.codehaus.oxyd.server.ActionManager"
                name="getDocument"
                scope="request">
        </action>

     <!-- For removing a document or a block -->
        <action path="/remove/"
                type="org.codehaus.oxyd.server.ActionManager"
                name="remove"
                scope="request">
        </action>

        <!-- comment a block or a document  -->
        <action path="/comment/"
                type="org.codehaus.oxyd.server.ActionManager"
                name="comment"
                scope="request">
        </action>

    <!-- For updating a block  -->
        <action path="/update/"
                type="org.codehaus.oxyd.server.ActionManager"
                name="updateBlock"
                scope="request">
        </action>

        <!-- get update of a document  -->
        <action path="/getupdate/"
                type="org.codehaus.oxyd.server.ActionManager"
                name="getUpdate"
                scope="request">
        </action>
    </action-mappings>

      <controller processorClass="org.codehaus.oxyd.server.RequestProcessor"
        debug="0" contentType="text/html" />

 </struts-config>
